import java.util.Scanner;//放在类声明之前，引入扫描仪
public class T{
	public static void main(String[] args){
		Scanner in=new Scanner(System.in);//声明一个新的扫描仪（向内存声请一个空间）,赋值
		System.out.println("请输入你的姓名：");
		String name=in.next();
		/*	整形数据输入：in.nestInt()来接收
          		双精度小数输入：in.nestDouble()接收
        		字符串输入：in.next()接收
        	*/
		System.out.println("请输入你的年龄：");
		int age=in.nextInt();
		System.out.println("Name:"+name);
		System.out.println("Age:"+age);
	}
}

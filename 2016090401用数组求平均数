import java.util.Scanner;
public class T{
	public static void main(String[] args){
		Scanner in=new Scanner(System.in);
		int[] arr=new int[5];
		int sum=0;
		for(int i=0;i<5;i++){
			System.out.println("请输入第"+(i+1)+"个学生的成绩：");
			arr[i]=in.nextInt();
			sum+=arr[i];
		}
		System.out.println("平均分为："+sum/5);
/*整型数据与整型数据相处得到的还是整型；
如果将其中一个数据改成double那么结果就是double，因为double比int大
*/
	}
}
